<Window x:Class="AppointmentSystem.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Appointment Management System" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Appointment Management" FontSize="24" FontWeight="Bold"
                       Foreground="#2E5090" Margin="0,0,0,5"/>
            <Separator/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Appointments List -->
            <GroupBox Header="Appointments" Grid.Column="0" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" ItemsSource="{Binding Appointments}"
                              SelectedItem="{Binding SelectedAppointment}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Patient Name" Binding="{Binding PatientName}" Width="*"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding AppointmentDate, StringFormat='MM/dd/yyyy hh:mm tt'}" Width="150"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Refresh" Command="{Binding LoadAppointmentsCommand}"
                                Width="80" Padding="5" Margin="0,0,5,0"/>
                        <Button Content="Edit" Command="{Binding EditAppointmentCommand}"
                                Width="80" Padding="5" Margin="0,0,5,0"/>
                        <Button Content="Delete" Command="{Binding DeleteAppointmentCommand}"
                                Width="80" Padding="5" Background="#DC3545" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center"
                          VerticalAlignment="Stretch" Background="LightGray"/>

            <!-- Appointment Form -->
            <GroupBox Header="Appointment Details" Grid.Column="2" Margin="5,0,0,0">
                <StackPanel>
                    <TextBlock Text="Patient Name" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding PatientName, UpdateSourceTrigger=PropertyChanged}"
                             Padding="5" Margin="0,0,0,10"/>

                    <TextBlock Text="Appointment Date" Margin="0,0,0,2"/>
                    <DatePicker SelectedDate="{Binding AppointmentDate}"
                                Margin="0,0,0,10"/>

                    <TextBlock Text="Status" Margin="0,0,0,2"/>
                    <ComboBox SelectedValue="{Binding Status}" Margin="0,0,0,10">
                        <ComboBoxItem Content="Scheduled" IsSelected="True"/>
                        <ComboBoxItem Content="Completed"/>
                        <ComboBoxItem Content="Cancelled"/>
                    </ComboBox>

                    <TextBlock Text="Description" Margin="0,0,0,2"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             Height="100" Padding="5" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Save" Command="{Binding SaveAppointmentCommand}"
                                Width="80" Padding="5" Margin="0,0,5,0"
                                Background="#28A745" Foreground="White"/>
                        <Button Content="Cancel" Command="{Binding CancelCommand}"
                                Width="80" Padding="5"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Footer -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="Ready" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>